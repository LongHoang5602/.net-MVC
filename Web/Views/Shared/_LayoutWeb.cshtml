<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:100,200,300,400,500,600,700,800,900" rel="stylesheet">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/Content/js")
    <link rel="shortcut icon" href="images/favicon.png" type="image/x-icon">


</head>
<body>              
        <!-- header section strats -->
    <header class="header_section">
        <div class="container-fluid">
            <nav class="navbar navbar-expand-lg custom_nav-container ">
                <a class="navbar-brand" href="index.html">
                    <span style="width:200px">
                        Hoàng Thu Thương
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class=""> </span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav">
                        <li class="nav-item ">
                            <a class="nav-link" href="@Url.Action("index","home")">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index","product")"> Product </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("about","home")"> About </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("contact","home")">Contact Us</a>
                        </li>
                    </ul>
                    <div class="user_option-box">
                        @Html.Partial("_LoginPartial")
                        <a href="">
                            <i class="fa fa-user" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("ViewCart","Product")">
                            <i class="fa fa-cart-plus" aria-hidden="true" ></i>
                        </a>
                        

                    </div>
                </div>
            </nav>
        </div>
        <div class="search" style="padding:30px">
            <form action="@Url.Action("Search", "Product")" method="get">
                <input type="text" name="productName" placeholder="Search..." />
                <button type="submit">Search</button>
            </form>
        </div>
       
    </header>

    <style>
        .search{
            position:relative;
            bottom:30px;
            left:80%;
            
        }

        .search input{
            padding: 2px 15px;
            border-radius:10px;
            font-size:small;
        }
            .search button {
                border-radius: 10px;
                box-shadow: 2px 2px #000000;
                background-color: #FF8400;
            }
    </style>
        <!-- end header section -->
        <!-- slider section -->
        <!-- end slider section -->
        <!-- shop section -->
        <!-- end shop section -->
        
        <!-- about section -->
        @RenderBody()
        @RenderSection("scripts", required: false)

</body>
</html>
