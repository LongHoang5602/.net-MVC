@model IEnumerable<Web.Models.Products>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutWeb.cshtml";
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>


<body>
    <section class="shop_section layout_padding">
        <div class="container">
            <div class="heading_container heading_center">
                <h2>
                    Latest
                </h2>
                <i class="fa fa-plus" aria-hidden="true">@Html.ActionLink("Create", "Create", "AdmProduct", new { @class = "btn-details" })</i>
            </div>
            <div class="row">
                @foreach (var item in Model)
                {

                <div class="col-sm-6 col-xl-3">
                    <div class="box">
                        <a href="">
                                
                            <span>
                                    Price: @item.ProductPrice
                            </span>
                            <div class="img-box">
                                <img src="@item.ImageProduct" alt="image">
                            </div>
                            <div class="detail-box">
                                <h6>
                                    @item.ProductName
                                </h6>
                                <h6>
                                </h6>
                            </div>
                        </a>
                    </div>
                    @Html.ActionLink("Details", "Details", "AdmProduct", new { id = item.ProductId }, new { @class = "btn-details" })
                    @Html.ActionLink("Edit", "Edit", "AdmProduct", new { id = item.ProductId }, new { @class = "btn-edit" })
                    @Html.ActionLink("Delete", "Delete", "AdmProduct", new { id = item.ProductId }, new { @class = "btn-edit" })
                </div>


                }
            </div>
            <div class="btn-box">
                <a href="">
                    View All
                </a>
            </div>
        </div>
    </section>


<style>

    a.btn-details{
        margin:20px;
    }
    a.btn-edit {
        margin: 10px
    }
</style>



</body>
</html>
